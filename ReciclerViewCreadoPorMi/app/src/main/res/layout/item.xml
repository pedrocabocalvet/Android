<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="7dp"
    card_view:cardCornerRadius="50dp"

    card_view:cardElevation="7dp">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/layout_item"
    android:background="@drawable/fondoneutro5">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/imagenItem"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="25dp" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/texto1Item"
            android:text="adsffads"
            android:textSize="45dp"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/texto2Item"
            android:text="fasdfsda"
            android:textSize="30dp"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/texto1Item"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageViewX"
            android:background="@drawable/xxx"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_alignBottom="@+id/texto1Item"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>