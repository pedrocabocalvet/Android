<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/framesubactivityprincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.caboc.reciclerviewcreadopormi.PaginaJugador">

    <ImageView
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:id="@+id/imageJugadorSubActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageEquipoSubActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="NOMBRE JUGADOR"
        android:id="@+id/txtNombreJugadorSubActivity"
        android:textSize="30dp"
        android:layout_below="@+id/imageJugadorSubActivity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Barcelona"
        android:id="@+id/txtEquipoSubActivity"
        android:textSize="30dp"
        android:layout_below="@+id/txtNombreJugadorSubActivity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Una breve descripcion de las principales caracteristicas del jugador asi que como equipos aÃ±os y sitios que ha debutado, tambien puede ser el nombre completo. etc"
        android:id="@+id/txtDescJugadorSubActivity"
        android:layout_below="@+id/txtEquipoSubActivity"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />
</RelativeLayout>
